set_project("app")
set_version("{{version}}")
set_warnings("all")
add_rules("mode.debug", "mode.release")
add_configfiles("include/config.h.in", { prefix = "APP" })
add_linkdirs("vendor/lib")
add_includedirs("include", "src/lib", "vendor/include")
add_rpathdirs("./lib")
add_links({{libs | escape | join}})

target("app")
    set_targetdir("app/")
    set_kind("binary")
    add_files("src/**.c")
